<div class="w-full min-h-[100vh] h-auto overflow-y-scroll bg-[rgba(243,243,243,.7)]">
    <h1> Repositories </h1>
    <section class="w-full grid grid-cols-12 bg-yellow-300 px-16px py-4">
        <div class="col-span-3  text-center b-r-2 border-l-black">    Count: </div><div class="col-span-3"> {{ stats.Count }}     </div>
        <div class="col-span-3 text-center b-r-2 border-l-black">    Mean Stars:    </div><div class="col-span-3"> {{ stats.Mean_Stars }}     </div>
        <div class="col-span-3 text-center b-r-2 border-l-black">    Mean Subs:     </div><div class="col-span-3"> {{ stats.Mean_Subs }}     </div>
        <div class="col-span-3 text-center b-r-2 border-l-black">     Mean Forks:   </div><div class="col-span-3"> {{ stats.Mean_Forks}}                              </div>
        <div class="col-span-3 text-center b-r-2 border-l-black"> Mean Network_count: </div><div class="col-span-3">{{ stats.Mean_Network }}  </div>
    </section>
    <table>
        <tr>
            <th class="mx-2"> ID </th>
            <th class="mx-2"> Repository </th>
            <th class="mx-2"> Page </th>
            <th class="mx-2"> Created </th>
            <th class="mx-2"> Stars </th>
            <th class="mx-2"> Forks </th>
            <th class="mx-2"> Subs </th>
            <th class="mx-2"> Network Count </th>
        </tr>
        {{#each collection}}
            {{#with this as |element|}}
                <tr class="py-4 border-b-2 border-black">
                    <td class="mx-2"> {{@index}} </td>
                    <td class="mx-2"> {{ element.Repository }} </td>
                    <td class="mx-2"> {{ element.Page }} </td>
                    <td class="mx-2"> {{ element.Created }} </td>
                    <td class="mx-2"> {{ element.Stars }} </td>
                    <td class="mx-2"> {{ element.Forks }} </td>
                    <td class="mx-2"> {{ element.Subscribers }} </td>
                    <td class="mx-2"> {{ element.Network_count }} </td>
                    <td class="mx-2">
                        <a href="{{element.Page}}">
                            <button
                                    class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                                VISIT
                            </button>
                        </a>
                    </td>

                </tr>
            {{/with}}
        {{/each}}
    </table>
</div>
